{
    "name": "leoflapper/mailprovider",
    "type": "library",
    "description": "Allows you to quickly send mails with different mail services like Mandrill, SendGrind and Mailgun",
    "keywords": [
        "email",
        "provider",
        "mail",
        "mandrill",
        "sendgrid",
        "mailgun"
    ],
    "homepage": "https://www.leoflapper.nl/",
    "license": "MIT",
    "authors": [
        {
            "name": "Leo Flapper",
            "email": "info@leoflapper.nl"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "mandrill/mandrill": "1.0.*",
        "sendgrid/sendgrid": "~5.0.7",
        "mailgun/mailgun-php": "~2.0",
        "phpmailer/phpmailer": "~5.2"
    },
    "autoload": {
        "psr-4": {
            "MailProvider\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MailProvider\\": "src/"
        }
    }
}
